---
const technologies = [
  {
    frameworks: ["react.svg", "spring.svg", "fastapi.svg", "astro.svg"],
    databases: ["mysql.svg", "postgresql.svg"],
    others: ["git.svg", "docker.svg", "linux.svg"],
    languages: ["python.svg", "java.svg", "typescript.svg"]
  },
];

const categories = [
  { name: "Frameworks", key: "frameworks" },
  { name: "Databases", key: "databases" },
  { name: "Languages", key: "languages" },
  { name: "Others", key: "others" },
];
---

<section class="px-5 md:px-10 lg:px-20 py-8" id="technologies">
  <div class="max-w-5xl mx-auto">
    <!-- Title -->
    <div class="mb-8 space-y-2">
      <div class="flex items-center gap-4">
        <h2 class="text-xl md:text-2xl font-bold tracking-tight bg-gradient-to-r from-white to-gray-400 bg-clip-text text-transparent">
          Technologies
        </h2>
        <img src="/icons/technology.svg" alt="" class="w-8 h-8 opacity-80" />
      </div>
      <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-blue-700 rounded-full"></div>
    </div>

    <!-- Technologies Grid -->
    {technologies.map((tech) => (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {categories.map((category) => (
          <div class="group relative">
            <!-- Glow effect -->
            <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl opacity-0 group-hover:opacity-20 transition-opacity duration-300"></div>
            
            <div class="relative bg-gray-900/80 border border-gray-800 rounded-2xl p-4 hover:border-gray-700 transition-colors duration-200 h-full">
              <!-- Category Title -->
              <div class="mb-4 text-center">
                <h3 class="text-base md:text-lg font-bold text-blue-400 group-hover:text-blue-300 transition-colors duration-300">
                  {category.name}
                </h3>
                <div class="w-12 h-0.5 bg-blue-500 rounded-full mx-auto mt-2"></div>
              </div>

              <!-- Icons Grid -->
              <ul class="flex flex-wrap justify-center gap-6">
                {tech[category.key as keyof typeof tech].map((item: string) => (
                  <li class="group/icon">
                    <div class="relative">
                      <!-- Icon background effect -->
                      <div class="absolute -inset-2 bg-blue-500 rounded-xl opacity-0 group-hover/icon:opacity-20 transition-opacity duration-200"></div>
                      
                      <div class="relative bg-gray-800/50 border border-gray-700 rounded-xl p-2 hover:border-blue-500/50 hover:bg-gray-800/70 transition-colors duration-200 hover:scale-110">
                        <img 
                          src={`/icons/technologies/${item}`} 
                          alt={item.replace(/\.(svg|png)$/, '')}
                          class="w-8 h-8 object-contain"
                        />
                      </div>
                      
                      <!-- Tooltip with tech name -->
                      <div class="absolute -bottom-8 left-1/2 -translate-x-1/2 bg-gray-900 text-white text-xs px-2 py-1 rounded opacity-0 group-hover/icon:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none z-10">
                        {item.replace(/\.(svg|png)$/, '').replace(/-/g, ' ').toUpperCase()}
                      </div>
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    ))}
  </div>
</section>