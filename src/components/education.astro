---
const education = [
  {
    title: "Technological Baccalaureate",
    years: "2020 - 2022",
    institution: "IES Alcala High School",
  },
  {
    title: "Higher Technician in Web Application Development",
    years: "2022 - 2024",
    institution: "IES Las Galletas",
  },
];
---

<section class="px-5 md:px-10 lg:px-20 py-16" id="education">
  <div class="max-w-5xl mx-auto">
    <!-- Title -->
    <div class="mb-12 space-y-2">
      <h2 class="text-4xl md:text-5xl font-bold tracking-tight bg-gradient-to-r from-white to-gray-400 bg-clip-text text-transparent">
        Education
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-blue-700 rounded-full"></div>
    </div>

    <!-- Timeline -->
    <div class="relative pl-8 md:pl-12">
      <!-- Vertical line -->
      <div class="absolute left-0 top-0 bottom-0 w-[2px] bg-gradient-to-b from-blue-500 via-blue-600 to-transparent"></div>

      <div class="space-y-10">
        {
          education.map((item, index) => (
            <div class="relative group">
              <!-- Timeline dot -->
              <div class="absolute -left-[2.15rem] md:-left-[2.65rem] top-2 w-4 h-4 bg-blue-500 rounded-full border-4 border-gray-900 group-hover:scale-125 group-hover:bg-blue-400 transition-all duration-300 shadow-lg shadow-blue-500/50">
                <div class="absolute inset-0 rounded-full bg-blue-400 animate-ping opacity-75 group-hover:opacity-0"></div>
              </div>

              <!-- Content card -->
              <div class="relative">
                <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl opacity-0 group-hover:opacity-20 blur transition duration-300"></div>
                
                <div class="relative bg-gray-900/50 backdrop-blur-sm border border-gray-800 rounded-xl p-6 hover:border-gray-700 transition-all duration-300">
                  <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-2 mb-3">
                    <h3 class="text-xl font-semibold text-white group-hover:text-blue-400 transition-colors duration-300">
                      {item.title}
                    </h3>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-500/10 text-blue-400 border border-blue-500/20 w-fit">
                      {item.years}
                    </span>
                  </div>
                  <p class="text-gray-400 flex items-center gap-2">
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    {item.institution}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>