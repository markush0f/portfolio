---
const certificates = [
  {
    name: "Microservice Spring Boot and Spring Cloud",
    description:
      "Certified in Microservice Architecture using Spring Boot and Spring Cloud.",
    image: "/spring-microservice-certificate.jpg",
    downloadLink: "/spring-microservice-certificate.jpg",
  },
  {
    name: "React and Next.js",
    description: "Certified React and NextJS.",
    image: "/react-certificate.jpg",
    downloadLink: "/react-certificate.jpg",
  },
];
---

<div class="max-w-6xl mx-auto relative mb-20">
  <h1 class="text-3xl font-semibold text-left sm:ml-28 mb-6 ml-10">
    Certificates
  </h1>
  <img src="/icons/certificate.svg" alt="" />
  <div class="flex gap-6 justify-center flex-wrap">
    {
      certificates.map((certificate) => (
        <div
          key={certificate.name}
          class="shadow-lg rounded-lg p-4 flex flex-col w-[80%] sm:w-[20%] md:w-[40%] relative"
        >
          <div class="overflow-hidden">
            <img
              src={certificate.image}
              alt={certificate.name}
              id={certificate.name}
              class="w-full h-32 sm:h-48 object-cover rounded-t-lg transform transition-all duration-200 hover:scale-110 cursor-pointer"
            />
          </div>
          <h3 class="sm:text-xl text-sm font-semibold mt-4 text-highlighted">
            {certificate.name}
          </h3>
          <p class="text-xs sm:text-base text-blue mt-2">
            {certificate.description}
          </p>
          <a
            href={certificate.downloadLink}
            download
            class="absolute top-4 right-4 text-blue-500 hover:text-blue-700"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-10 h-10"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 5v14M19 12l-7 7-7-7"
              />
            </svg>
          </a>
        </div>
      ))
    }
  </div>
</div>
