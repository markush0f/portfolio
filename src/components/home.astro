---
import { motion } from "framer-motion";
---

<div
  class="flex flex-col lg:flex-row items-center justify-center h-screen lg:gap-40 gap-10 lg:-mt-28 mt-0 p-5 lg:p-0 relative"
>
  <div class="flex flex-col gap-4">
    <div class="flex items-center gap-4">
      <h1 class="text-6xl lg:text-7xl name">MARKUS</h1>
      <p class="text-2xl lg:text-3xl text-highlighted ml-4 title">
        Full stack developer
      </p>
    </div>
    <p class="text-6xl lg:text-7xl name">ABRAMIAN MEDINA</p>
    <ul class="flex gap-5 icons">
      <li>
        <img src="/icons/github_dark.svg" alt="" class="lg:w-8 w-10" />
      </li>
      <li>
        <img src="/icons/linkedin.svg" alt="" class="lg:w-8 w-10" />
      </li>
    </ul>
  </div>
  <div>
    <img
      src="/profile.jpeg"
      alt="profile"
      class="w-52 h-52 lg:w-80 lg:h-80 rounded-full object-cover profile"
    />
  </div>
</div>
